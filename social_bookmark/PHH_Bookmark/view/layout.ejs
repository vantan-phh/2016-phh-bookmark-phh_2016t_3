<style>
  *{
    box-sizing: border-box;
    font-family: sans-serif;
  }
  body{
    background-color: #fafafa;
    margin: 0px;
  }
  h1, h2, h3, h4, h5, h6, p, div, ol, a{
    padding: 0;
    margin: 0;
  }
  li{
    list-style: none;
  }
  input, textarea{
    outline-color: green;
    outline-width: 1px;
  }
  /*----------------------------/
              ヘッダー
  -----------------------------*/
  header{
    background-color: white;
    border-bottom: solid #ccc 1px;
    padding: 10px;
    width: 1280px;
    height: 60px;
  }

  #headerFavicon img{
    position: absolute;
    left: 70px;
    top: 5px;
  }

  #headerMenu a{
    color: #36a029;
    text-decoration: none;
  }
  #headerMenu a:hover{
    color: #008000;
  }

  #headerTitle{
    color: #36a029;
    top: 20px;
    left: 170px;
    position: absolute;
  }

  #headerSearch{
    border: solid #e1e1e1 2px;
    outline-width: 2px;
    padding: 5px;
    position: absolute;
    left: 700px;
    top: 15px;
  }

  #headerLoginUser{
    white-space: nowrap;
    font-size: 15px;
    position: absolute;
    left: 900px;
    top: 20px;
  }
  #headerUserName{
    color: gray;
    font-size: 14px;
    position: absolute;
    top: 17px;
  }
  #headerMyImg img{
    width: 30px;
    height: 30px;
    position: absolute;
    left: 1000px;
    top: 12px;
  }
  #headerOpenMenu{
    width: 10px;
    position: absolute;
    left: 1040px;
    top: 20px;
  }
  #headerMenuList{
    background-color: white;
    border: solid black 1px;
    z-index: 100;
    width: 170px;
    min-height: 0;
    overflow: auto;
    position: absolute;
    left: 910px;
    top: 60px;
  }
  #headerMenuList a{
    text-decoration: none;
  }
  #headerMenuList li{
    color: black;
    list-style: none;
    padding: 6px 5px 6px 20px;
  }
  #headerMenuList li:hover{
    background-color: #e1e1e1;
  }

  #headerLogin{
    color: black;
    background: linear-gradient(#fcfcfc, #f7f7f7);
    border: solid 1px #e1e1e1;
    border-radius: 2px;
    float: right;
    font-size: 13px;
    font-weight: 600;
    text-align: center;
    text-decoration: none;
    width: 60px;
    padding: 6px;
    margin: 7px;
  }
  #headerLogin:hover{
    background: linear-gradient(#f8f8f8, #dfdfdf);
  }

  #headerCreateAccount{
    color: white;
    background: linear-gradient(#07d34f, #05b142);
    border-radius: 2px;
    float: right;
    font-size: 15px;
    text-decoration: none;
    text-shadow: 0.5px 0.5px 0.5px black;
    padding: 6px;
    margin: 7px 180px 7px 7px;
  }
  #headerCreateAccount:hover{
    background: linear-gradient(#049336, #036b27);
  }
</style>
<header>
  <div id="header">
    <a id="headerFavicon" href="/PHH_Bookmark/topPage"><img src="/img/favicon.png"></a>
    <% if (typeof userName !== 'undefined' && typeof nickName !== 'undefined') { %>
      <div id="headerTitle">
        <p>ここにろご</p>
      </div>
      <span id="headerLoginUser"><%= nickName%><div id="headerUserName">(<%= userName %>)</div></span>
      <a id="headerMyImg" href="/PHH_Bookmark/myProfile"><img src="<%= thumbnail %>"></a>
      <div id="headerOpenMenu" onclick="obj=document.getElementById('headerMenuList').style; obj.display=(obj.display=='none')?'block':'none';">
        <a style="cursor:pointer;">▼</a>
      </div>
      <div id="headerMenuList" style="display:none;clear:both;">
        <a id="headerMyPage" href="/PHH_Bookmark/myPage"><li>My page</li></a>
        <a id="headerMenu2" href="/PHH_Bookmark/createOrganization"><li>createOrganization</li></a>
        <a href="/PHH_Bookmark/myProfileEdit"><li>Profile Edit</li></a>
        <a id="headerSettings" href="/PHH_Bookmark/accountSetting"><li>Settings</li></a>
        <a id="headerLogout" href="/PHH_Bookmark/logout"><li>Logout</li></a>
      </div>
    <% } else{ %>
        <a id="headerCreateAccount" href="/PHH_Bookmark">Create Account</a>
        <a id="headerLogin" href="/PHH_Bookmark/login">Login</a>
    <% } %>
  </div>
</header>
