<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>myBookmarkEdit - PHHB</title>
    <link rel="stylesheet" type="text/css" href="/css/myBookmarkEdit.css">
  </head>
  <body>
    <% include layout %>
    <main>
      <div id="organization"></div>
      <div id="list">
        <form accept-charset="UTF-8" action="/PHH_Bookmark/myBookmarkEdit" method="post">
            <!--<input type="text" placeholder="URLを入力" id="url" name="new_bookmark_url">-->
          URL：
          <% if(typeof url !== 'undefined'){ %>
            <%= url %>
          <% } %>
          <div id="change">
            <p class="subtitle">タイトル</p>
            <div class="form"><input type="text" placeholder="タイトル" value="<%= title %>" id="title" name="title"></div>
            <% if(typeof titleNotice !== 'undefined'){ %>
              <p class="notice"><%= titleNotice %></p>
            <% } %>
            <p class="subtitle">説明文</p>
            <% if(typeof description !== 'undefined'){ %>
              <div class="form"><textarea type="text" placeholder="説明" name="description"><%= description %></textarea></div>
            <% }else{ %>
              <div class="form"><textarea type="text" placeholder="説明" id="description" name="description"></textarea></div>
            <% } %>
            <% if(typeof descriptionNotice !== 'undefined'){ %>
              <p class="notice"><%= descriptionNotice %></p>
            <% } %>
            <input type="submit" value="送信" class="button">
          </div>
        </form>
      </div>
    </main>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script>
      $(function(){
        var $button = $(".button");
        $button.click(function(){
          this.disabled = true;
          this.form.submit();
        });
      });
    </script>
    <!-- <script src="/test.js"></script> -->
  </body>
</html>
