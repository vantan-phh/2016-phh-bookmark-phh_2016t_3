<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <form action="/PHH_Bookmark/organizationManagement" method="post" enctype="multipart/form-data">
      <div>組織名</div>
      <input type="text" value="<%= orgName %>" name="orgName" placeholder="組織名">
      <% if(typeof orgNameNotice !== 'undefined'){ %>
        <p><%= orgNameNotice %></p>
      <% } %>
      <div>紹介文</div>
      <input type="text" value="<%= orgIntroduction %>" name="orgIntroduction" placeholder="紹介文">
      <% if(typeof orgIntroductionNotice !== 'undefined'){ %>
        <p><%= orgIntroductionNotice %></p>
      <% } %>
      <% if(typeof orgThumbnail !== 'undefined'){%>
        <div><img src="<%= orgThumbnail %>"></img></div>
      <% } %>
      <% if(typeof thumbailNotice !== 'undefined'){%>
        <p><%= thumbailNotice %></p>
      <% } %>
      <input type="file" accept="image/*" name="image_file">
      <input type="submit" value="変更" class="button">
    </form>
    <form action="/PHH_Bookmark/organizationManagement/dissolve" method="post">
      <input type="submit" value="組織を解散">
    </form>
  </body>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  <script>
    $(function(){
      var $button = $(".button");
      $button.click(function(){
        this.disabled = true;
        this.form.submit();
      });
    });
  </script>
</html>
