<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" type="text/css" href="/myProfileEdit.css">
  </head>
  <body>
    <header>
      <div id="headerMenu">
        <a id="headerFavicon" href="/PHH_Bookmark/topPage"><img src="/img/favicon.png"></a>
        <input id="headerSearch" type="text" placeholder="Search Bookmarks">
        <% if (typeof userName !== 'undefined' && typeof nickName !== 'undefined') { %>
          <span id="headerLoginUser"><%= nickName%><div id="headerUserName">(<%= userName %>)</div></span>
        <% } %>
        <a id="headerMyImg" href="/PHH_Bookmark/myProfile"><img src="http://res.cloudinary.com/dy4f7hul5/image/upload/v1469676799/iucwtxf12o9ztvb3tm14.png"></a>
        <div id="headerOpenMenu" onclick="obj=document.getElementById('headerMenuList').style; obj.display=(obj.display=='none')?'block':'none';">
          <a style="cursor:pointer;">▼</a>
        </div>
        <div id="headerMenuList" style="display:none;clear:both;">
          <a id="headerMyPage" href="/PHH_Bookmark/myPage"><li>My page</li></a>
          <a id="headerSettings" href="/PHH_Bookmark/myProfileEdit"><li>Settings</li></a>
          <a id="headerLogout" href="/PHH_Bookmark/logout"><li>Logout</li></a>
        </div>
      </div>
    </header>
    <main>
      <form action="/PHH_Bookmark/myProfileEdit" method="post" enctype="multipart/form-data">
        <div>
          <% if(nickName) { %>
            <input type="text" name="nick_name" placeholder="ニックネーム" value="<%= nickName %>">
          <% } else { %>
            <input type="text" name="nick_name" placeholder="ニックネーム">
          <% } %>

          <% if(imagePath) { %>
            <img src="<%= imagePath %>" width="128" height="128"></img>
          <% } %>
          <input type="button" value="画像を変更" id="changeThumbnail">
          <div id="changeButton"></div>

          <% if(introduction) { %>
            <input type="text" name="introduction" placeholder="自己紹介文" value="<%= introduction %>">
          <% } else { %>
            <input type="text" name="introduction" placeholder="自己紹介文">
          <% } %>

          <input type="submit" value="送信">
        </div>
      </form>
    </main>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script>
      $(function(){
        var $changeThumbnail = $('#changeThumbnail');
        var $changeButton = $('#changeButton');
        $changeThumbnail.click(function(){
          var $selectFile = $('<input type="file" name="image_file" accept="image/*">');
          $changeButton.append($selectFile);
          $changeThumbnail.remove();
        });
      });
    </script>
  </body>
</html>
