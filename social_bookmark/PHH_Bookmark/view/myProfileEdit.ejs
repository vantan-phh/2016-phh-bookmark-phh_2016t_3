<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" type="text/css" href="/css/myProfileEdit.css">
  </head>
  <body>
    <% include layout %>
    <main>
      <form action="/PHH_Bookmark/myProfileEdit" method="post" enctype="multipart/form-data">
        <div>

          <label><p id="readNickname">ニックネーム</p>
          <% if(nickName !== undefined){ %>
            <input class="nickname" type="text" name="nick_name" placeholder="ニックネーム" value="<%= nickName %>">
          <% } else { %>
            <input class="nickname" type="text" name="nick_name" placeholder="ニックネーム"></label>
          <% } %>
          <% if(typeof nickNameNotice !== 'undefined'){ %>
            <p id="errorNickname"><%= nickNameNotice %></p>
          <% } %>

          <% if(imagePath) { %>
            <img id="image" src="<%= imagePath %>" width="128" height="128"></img>
          <% } %>
          <input id="imageFile" type="file" name="image_file" accept="image/*">

          <label><p id="readIntro">自己紹介</p>
          <% if(introduction) { %>
            <textarea class="intro" type="text" name="introduction" placeholder="自己紹介文" value="<%= introduction %>"></textarea>
          <% } else { %>
            <textarea class="intro" type="text" name="introduction" placeholder="自己紹介文"></textarea></label>
          <% } %>
          <% if(typeof introductionNotice !== 'undefined'){ %>
            <p id="errorIntro"><%= introductionNotice %></p>
          <% } %>
          <input id="submit" type="submit" value="送信">
        </div>
      </form>
    </main>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script>
      $(function(){
        var $changeThumbnail = $('#changeThumbnail');
        var $changeButton = $('#changeButton');
        $changeThumbnail.click(function(){
          var $selectFile = $('<input type="file" name="image_file" accept="image/*">');
          $changeButton.append($selectFile);
          $changeThumbnail.remove();
        });
      });
    </script>
  </body>
</html>
