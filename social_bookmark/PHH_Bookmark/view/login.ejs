<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Login - PHHB</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/css/login.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
  </head>
  <body>
    <% include layout %>
    <main>
      <div class="text-center">
        <form action="/PHH_Bookmark/login" method="post">
          <h2 class="form-title">Login</h2>
          <div class="form-group">
            <label><p>Email Address or Username</p>
            <input class="input form-control" name="email_or_user_name" size="30" type="text" placeholder="Email or Username"></label>
            <% if (typeof mailNotice !== 'undefined') { %>
              <div class="alert alert-danger" role="alert">
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                <%= mailNotice %>
              </div>
            <% } %>
            <% if (typeof usernameNotice !== 'undefined') { %>
              <div class="alert alert-danger" role="alert">
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                <%= usernameNotice %>入力してください
              </div>
            <% } %>
          </div>
          <div class="form-group">
            <label><p>Password</p>
            <input class="input form-control" name="password" size="30" type="password" placeholder="Password"></label>
            <% if (typeof passwordNotice !== 'undefined') { %>
              <div class="alert alert-danger" role="alert">
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                <%= passwordNotice %>
              </div>
            <% } %>
          </div>

          <input id="submitButton" type="submit" value="Login" class="button btn btn-info">
        </form>
        <% if (typeof noUser !== 'undefined') { %>
          <div class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <%= noUser %>もう一度入力してください
          </div>
        <% } %>
      </div>
    </main>
    <script>
      $(function(){
        var $button = $(".button");
        $button.click(function(){
          this.disabled = true;
          this.form.submit();
        });
      });
    </script>
  </body>
</html>
