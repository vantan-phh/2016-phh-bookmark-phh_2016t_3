<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Login - PHHB</title>
    <link rel="stylesheet" type="text/css" href="/css/login.css">
  </head>
  <body>
    <% include layout %>
    <main>
      <form action="/PHH_Bookmark/login" method="post">
        <h2 class="form-title">Login</h2>
        <label><p>Email Address or Username</p>
        <input class="input" name="email_or_user_name" size="30" type="text"></label>
        <% if (typeof mailNotice !== 'undefined') { %>
          <p class="notice"><%= mailNotice %></p>
        <% } %>
        <% if (typeof usernameNotice !== 'undefined') { %>
          <p class="notice"><%= usernameNotice %></p>
          <p class="notice">入力してください</p>
        <% } %>
        <label><p>Password</p>
        <input class="input" name="password" size="30" type="password"></label>
        <% if (typeof passwordNotice !== 'undefined') { %>
          <p class="notice"><%= passwordNotice %></p>
        <% } %>

        <input id="submitButton" type="submit" value="Login" class="button">
      </form>
      <% if (typeof noUser !== 'undefined') { %>
        <p class="notice"><%= noUser %></p>
        <p class="notice">もう一度入力してください</p>
      <% } %>
    </main>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script>
      $(function(){
        var $button = $(".button");
        $button.click(function(){
          this.disabled = true;
          this.form.submit();
        });
      });
    </script>
  </body>
</html>
