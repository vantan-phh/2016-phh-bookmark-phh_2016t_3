<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Organization Bookmark Edit - PHHB</title>
    <link rel="stylesheet" type="text/css" href="/css/orgBookmarkEdit.css">
  </head>
  <body>
    <% include layout %>
    <main>
      <div id="orgInfo">
        <div id="img">
          <a name="<%= orgId %>" class="orgId"><img src="<%= orgThumbnail %>"></a>
        </div>
        <a name="<%= orgId %>" class="orgId"><p><%= orgName %></p></a>
        <div><%= orgIntroduction %></div>
      </div>

      <p id="pageTitle">ブックマークの編集</p>

      <div id="bookmarkInfo">
        <form action="/PHH_Bookmark/orgBookmarkEdit" method="post">
          <p class="formTitle">タイトル</p>
          <% if(typeof title !== 'undefined'){ %>
            <input type="text" placeholder="例）PHH Bookmark" name="title" id="title" value="<%= title %>">
          <% } else { %>
            <input type="text" placeholder="例）PHH Bookmark" name="title" id="title">
          <% } %>
          <% if(typeof titleNotice !== 'undefined'){ %>
            <p class="notice"><%= titleNotice %></p>
          <% } %>
          <p class="formTitle">説明文</p>
          <% if(typeof description !== 'undefined'){ %>
            <textarea type="text" placeholder="例）ソーシャルブックマークサービスです" name="description" id="description"><%= description %></textarea>
          <% } else { %>
            <textarea type="text" placeholder="例）ソーシャルブックマークサービスです" name="description" id="description"></textarea>
          <% } %>
          <% if(typeof descriptionNotice !== 'undefined'){ %>
            <p class="notice"><%= descriptionNotice %></p>
          <% } %>
          <div id="submitButton"><input type="submit" value="送信" class="button"></div>
        </form>
      </div>
      <form action="/PHH_Bookmark/organizationPage/submitOrgId" method="post" name="submitOrgId">
        <input type="hidden" name="result">
      </form>
    </main>
  </body>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  <script>
    $(function(){
      var $button = $(".button");
      var $orgId = $('.orgId');
      $button.click(function(){
        this.disabled = true;
        this.form.submit();
      });
      $orgId.click(function(){
        document.submitOrgId.result.value = this.name;
        document.submitOrgId.submit();
      });
    });
  </script>
</html>
